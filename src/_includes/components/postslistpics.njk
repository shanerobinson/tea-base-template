{% set postAuthor = post.data.author | default(meta.author, true) %}

<section class="mt-24">
  <div class="container px-5 pb-24 mx-auto">
    <div class="flex flex-wrap -mx-4 -mt-4 -mb-10 sm:-m-4">

      {% for post in postslist | reverse %}
        <div class="p-4 mb-6 md:w-1/2 xl:w-1/3 sm:mb-0">
          <div class="h-64 overflow-hidden border border-gray-200 rounded-lg shadow-md hover:shadow-lg">
            <a href="{{ post.url | url }}">
              {% if post.data.images.thumb %}
                <img class="card" src="/assets/images/{{ post.data.images.thumb }}" alt="">
              {% else %}
                <img class="card" src="/assets/svg/placeholder-thumb.svg" alt="">
              {% endif %}
            </a>
          </div>
          <h3 class="pt-4 heading">
            <a href="{{ post.url | url }}">{{ post.data.title }}</a>
          </h3>
          <time datetime="{{ post.date | dateToFormat("yyyy-MM-dd") }}">
            <small>{{ post.date | dateToFormat("dd LLL yyyy") }} by {{ postAuthor }}
            </small>
          </time>
          <p class="text-base leading-relaxed">
            {{ post.data.excerpt }}
          </p>
        </div>
      {% endfor %}

    </div>
  </div>
</section>
