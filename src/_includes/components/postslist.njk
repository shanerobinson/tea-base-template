<div class="px-4 pt-4 pb-20 bg-white sm:px-6 lg:pb-28 lg:px-8">
  <div class="relative max-w-lg mx-auto lg:max-w-7xl">
    <div>
      <h2 class="text-3xl font-extrabold leading-9 tracking-tight text-gray-900 sm:text-4xl sm:leading-10">
        Recent posts
      </h2>
      <p class="mt-3 text-xl leading-7 text-gray-500 sm:mt-4">
        Nullam risus blandit ac aliquam justo ipsum. Quam mauris volutpat massa dictumst amet. Sapien tortor lacus arcu.
      </p>
    </div>
    <div class="grid gap-16 pt-12 mt-12 border-t-2 border-gray-100 lg:grid-cols-3 lg:col-gap-5 lg:row-gap-12">

      {% for post in postslist | reverse %}

        <div>
          <a href="{{ post.url | url }}" class="block">
            <h3 class="mt-4 text-xl font-semibold leading-7 text-gray-900">
              {{ post.data.title }}
            </h3>
            <p class="mt-3 text-base leading-6 text-gray-500">
              {{ post.data.excerpt }}
            </p>
          </a>
          <div class="flex items-center mt-6">
            <div class="ml-3">
              <div class="flex text-sm leading-5 text-gray-500">
                <time datetime="{{ post.date | dateToFormat("yyyy-MM-dd") }}">
                  {{ post.date | dateToFormat("dd LLL yyyy") }}
                </time>
                <span class="mx-1">
                &middot;
              </span>
                <span>
                6 min read
              </span>
              </div>
            </div>
          </div>
        </div>

      {% endfor %}

    </div>
  </div>
</div>
